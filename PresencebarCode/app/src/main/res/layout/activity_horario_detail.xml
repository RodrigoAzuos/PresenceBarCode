<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HorarioDetailActivity">
    <TextView
        android:id="@+id/txt_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes HorÃ¡rio"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_professor_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:text="Professor"/>
        <TextView
            android:id="@+id/txt_disciplina_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:text="Disciplina"/>
        <TextView
            android:id="@+id/txt_turma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:text="Turma"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_carga_horaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:text="Carga Horaria"/>
        <TextView
            android:id="@+id/txt_horario_hora_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:text="00:00:00"/>
        <TextView
            android:id="@+id/txt_horario_hora_fim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:text="00:00:00"/>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!--TextView
            android:id="@+id/txt_horas_falta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:text="Horas a repor"/>
        <TextView
            android:id="@+id/txt_disponivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:text="Horario Ativo"/-->

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"/>
    <Button
        android:id="@+id/bt_disponibilizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="disponiblizar"
        android:text="disponibilizar"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_cancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:onClick="cancelarDispon"
        android:visibility="gone"/>
    <Button
        android:id="@+id/bt_detail_solicitar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitar Horario"
        android:onClick="SolicitarHorario"
        android:visibility="gone"/>

</LinearLayout>